.button {
  display inline-block
  color $color-white
  font-family $font
  font-size $font-size-button
  font-weight 300
  text-decoration none
  padding 10px 20px
  background $color-button
  background linear-gradient(to bottom, $color-button--lighten 0%, $color-button 100%);
  border-radius 4px
  border none
  cursor: pointer

  &:hover {
    background $color-button--lighten
  }
    
  &:active {
    background $color-button
    outline none
  }
  
  &:focus {
    outline none
  }
}