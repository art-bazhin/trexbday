.carousel {
  $number-of-elements = 3

  position relative
  font-size 0
  width 100%
  
  &__window {
    width 100%
    overflow hidden
  }
  
  &__items-container {
    width (100% * $number-of-elements)
    transition all 0.5s ease
  }
  
  &__item {
    width (100% / $number-of-elements)
    height auto
    display inline-block
  }
  
  &__buttons-container {
    position absolute
    width 100%
    text-align center
    bottom 2%
  }

  &__item-button {
    display inline-block
    box-sizing content-box
    background-color $color-white
    border 1px solid $color-text
    border-radius 50%
    height 12px
    width 12px
    margin 0 4px
    
    &--active {
      background-color $color-carousel-button
      border none
      margin 1px 5px
    }
  }
  
  &__move-button {
    display block
    position absolute
    width 25px
    height 50px
    top 50%
    margin-top -(@height / 2)
    background-image url("../img/sprite.svg")
    background-repeat no-repeat
    background-size (@width * 10) @height
    
    &--prev {
      background-position 0 0
      left 4.8%
    }
    
    &--next {
      background-position -@width 0
      right 4.8%
    }
  }
}