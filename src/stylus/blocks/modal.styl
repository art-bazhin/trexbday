.modal {
  position fixed;
  width 100%
  height 100%
  top 0
  left 0
  background-color rgba(0, 0, 0, 0.5)
  z-index 10
  display none
  
  &--active {
    display block
  }
  
  &__form {
    position absolute
    left 50%
    top 50%
    height 409px
    width 617px
    margin-left -(@width / 2)
    margin-top -(@height / 2)
    background-color $color-white
    border 1px solid darken($color-white, 10%)
    border-radius 2px
    padding 50px 80px
    font-family $font
    color $color-text
    box-shadow: 0px 0px 20px 0px rgba(0,0,0,0.5);
    display none
    
    &--active {
      display block
    }
  }
  
  &__info {
    @extend .modal__form
    height 217px
    margin-top -(@height / 2)
    padding-top 40px
  }
  
  &__header {
    font-weight 400
    font-size $font-size-congratulate
    margin-top 0
    
    &--info {
      font-weight 400
      font-size $font-size-birthday
      margin-top 0
    }
  }
  
  &__field {
    position relative
    display block
    width 100%
    margin-top 30px
    margin-bottom 30px
    font-size $font-size-primary
    border 1px solid darken($color-white, 20%)
    border-radius 3px
    padding-left 15px
    padding-right 35px
    
    &--name {
      height 42px
    }
    
    &--text {
      padding-top 10px
      height 85px
      margin-bottom 35px
      resize none
    }
    
    &--error {
      border-color $color-error
    }

    &--good {
      border-color $color-good
    }

    &:focus {
      outline none
      border-color $color-focus
    }
    
    &::-ms-clear {
      display none
    }
  }
  
  &__error {
    font-size $font-size-error
    color $color-error
    position absolute
    display none
    
    &--name {
      top 140px
    }
    
    &--text {
      top 255px
    }
    
    &--active {
      display block
    }
  }
  
  &__icon {
    position absolute
    width 22px
    height @width
    left 505px
    background-image url("../img/sprite.svg")
    background-size (@width * 5) @width
    display none
    
    &--name {
      top 117px
    }
    
    &--text {
      top 189px
    }

    &--error {
      background-position -(@width * 3) 0
    }
    
    &--good {
      background-position -(@width * 2) 0
    }
    
    &--active {
      display block
    }
  }
  
  &__close-button {
    position absolute
    width 30px
    height @width
    background-image url("../img/sprite.svg")
    background-size (@width * 5) @width
    background-position -(@width * 1) 0
    top -(1.2 * @width)
    right -(1.2 * @width)
    cursor: pointer
  }
  
  &__number {
    color lighten($color-good, 20%)
  }
}